<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="index.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>Shortener URL by Nam Truong</title>
</head>
<body>
    <div class="container p-5 mt-5">
        <div class="d-block">
            <h2 class="text-center">Shortener URL by Nam Truong</h1>
        </div>
        <form action="/shortUrls" method="POST" class="my-4">
            <div class="form-group">
                <label class="src-only" for="url">Url:</label>
                <input required type="url" name="fullUrl" id="url" class="form-control col">
            </div>
            <div class="form-group">
                <label class="src-only" for="shortUrl">ShortUrl:</label> 
                <input type="input" name="shortUrl" id="shortUrl" class="form-control col">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <table class="table">
            <thead>
                <tr class="thead-light">
                    <th>Full Url</th>
                    <th>Short Url</th>
                    <th>Remove</th>
                </tr>    
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                <tr>
                    <td>
                        <a href="<%= shortUrl.fullUrl %>"><%= shortUrl.fullUrl %></a>
                    </td>
                    <td>
                        <a href="<%= shortUrl.shortUrl %>"><%= shortUrl.shortUrl %></a>
                    </td>
                    <td>
                        <button class="btn btn-danger" data-id="<%=shortUrl.shortUrl%>" >X</button>
                    </td>
                </tr>
                <% }); %>
            </tbody>
            
        </table>
    </div>
</body>
<script src="index.js"></script>
</html>